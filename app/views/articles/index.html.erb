<p style="color: green"><%= notice %></p>

<% content_for :title, "Articles" %>

<header>Articles!</header>

<div id="articles">
  <% @articles.each do |article| %>
    <div class="article">
      <%= render article %>
      <p><%= link_to "Show this article", article, class: "button" %></p>
    </div>
  <% end %>
</div>

<%= link_to "New article", new_article_path, class: "button" %>
